<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a2a5a"
    android:id="@+id/tapLayout"
    tools:context="com.giraffe.minori.squirrelshooting.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titlemoji_toka"
        android:src="@drawable/titlemoji_toka"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toTopOf="@+id/title_toka"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.375" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="513dp"
        android:id="@+id/title_toka"
        android:src="@drawable/title_toka"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlemoji_toka"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/title"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/touchscreen"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_toka"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        app:layout_constraintHorizontal_bias="0.506" />


</android.support.constraint.ConstraintLayout>
